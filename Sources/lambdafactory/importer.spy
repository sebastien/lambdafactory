@module importer
@import os
@import sys

@class Importer

	@property environment
	
	@constructor environment
		self environment = environment
	@end

	@method absoluteNameToSugarFile name
		return name replace (".", "/") + ".sg"
	@end
	
	@method absoluteNameToPythonFile name
		return name replace (".", "/") + ".py"
	@end
		
	@method importLocalSugarModule name
		var module_path = absoluteNameToPythonFile(name)
		environment parseModule(name)
	@end

@end


